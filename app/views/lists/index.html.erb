<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80);">
  <div class="container">
    <h1>Archer's Watch List</h1>
    <p>Save any movie to a custom list.</p>
    <%= link_to "Creat new list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <div class="d-flex">
    <form class="form-inline d-flex mt-3">
      <div class="form-group mx-sm-3 mb-2">
        <label for="text" class="sr-only">Search</label>
        <input name="query" type="text" class="form-control" id="inputPassword2" placeholder="Filter lists">
      </div>
      <button type="submit" class="btn btn-primary mb-2">Search</button>
    </form>
    <form class="form-inline d-flex mt-3">
      <button type="submit" class="btn btn-primary mb-2 ms-3">Refresh</button>
    </form>
  </div>
  <% img_url = 'https://static1.pointsinfocus.com/2009/08/31/popcorn-poster-shooting-the-image/20090830-0014.jpg' %>
  <div class="row d-flex flex-wrap">
    <% @lists.each do |list| %>
      <div class="col-12 col-sm-6 col-lg-3">
        <div class="card-category ms-2 my-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photoc.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
